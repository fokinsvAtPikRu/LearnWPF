<Window x:Class="Lesson_9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson_9"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >
    <Window.CommandBindings>
        <CommandBinding 
            Command="local:ChangeColorCommands.ChangeColor" 
            Executed="OnChangeColorExecute" 
            CanExecute="CanChangeColorExecuted"/>
        <CommandBinding
            Command="local:ChangeColorCommands.PreviousColor"
            Executed="OnPreviousColorExecute"
            CanExecute="CanPreviousColorExecutes"/>
    </Window.CommandBindings>
    <DockPanel x:Name="dockPanel" Background="Cyan" LastChildFill="False">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Действия">
                <MenuItem Header="Изменить цвет" Command="local:ChangeColorCommands.ChangeColor" />
                <MenuItem Header="Отменить" Command="local:ChangeColorCommands.PreviousColor" />
            </MenuItem>
        </Menu>
        <Button DockPanel.Dock="Top" Margin="10" 
                Padding="10" Content="Изменить цвет" 
                Height="Auto" Width="200"
                Command="local:ChangeColorCommands.ChangeColor"/>
        <Button DockPanel.Dock="Top" Margin="10" 
                Padding="10" Content="Отменить" 
                Height="Auto" Width="200"
                Command="local:ChangeColorCommands.PreviousColor" />

    </DockPanel>
</Window>

<Window x:Class="Lesson7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Rectangle Grid.Row="0"
                                       Stroke="Black"
                                       Width="20" Height="20" 
                                       RadiusX="3" RadiusY="3" />
                            <TextBlock x:Name="CheckedMark"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Grid.Row="0" Text="X" FontSize="15"
                                       Opacity="0"/>
                            <Ellipse x:Name="IndeterminateMark" 
                                     Fill="Gray" Width="15" Height="15"
                                     Opacity="1"/>
                            <ContentPresenter x:Name="content" Grid.Row="1" Content="Checked" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center"
                                              TextElement.FontSize="20"/>

                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckedMark" Property="Opacity" Value="1"/>
                                <Setter TargetName="IndeterminateMark" Property="Opacity" Value="0"/>
                                <Setter TargetName="content" Property="Content" Value="Checked" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="CheckedMark" Property="Opacity" Value="0"/>
                                <Setter TargetName="IndeterminateMark" Property="Opacity" Value="0"/>
                                <Setter TargetName="content" Property="Content" Value="UnChecked" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="{x:Null}" >
                                <Setter TargetName="CheckedMark" Property="Opacity" Value="0"/>
                                <Setter TargetName="IndeterminateMark" Property="Opacity" Value="1"/>
                                <Setter TargetName="content" Property="Content" Value="Indeterminate" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>            
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="chkbxOne" Grid.Column="0" 
                  IsThreeState="True" IsChecked="False" 
                  Content="{Binding ElementName=chkbxOne, Path=IsChecked}"/>
        <CheckBox x:Name="chkbxTwo" Grid.Column="1" 
                  IsThreeState="True" IsChecked="True" 
                  Content="{Binding ElementName=chkbxTwo, Path=IsChecked}"/>
        <CheckBox x:Name="chkbxThree" Grid.Column="2" 
                  IsThreeState="True" IsChecked="{x:Null}" 
                  Content="{Binding ElementName=chkbxThree, Path=IsChecked}"/>
    </Grid>
</Window>

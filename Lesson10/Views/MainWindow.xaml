<Window x:Class="Lesson10.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson10"
        xmlns:v="clr-namespace:Lesson10.Views"
        xmlns:vm="clr-namespace:Lesson10.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="RegularStyle">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontStyle" Value="Normal"/>            
        </Style>
        <Style TargetType="TextBox" x:Key="TextBoxStyle">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="5"/>            
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontStyle" Value="Normal"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="HeaderTextBlockStyle">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontStyle" Value="Normal"/>
            <Setter Property="FontWeight" Value="Black"/>
        </Style>
        <v:BoolToSolidColorBrushConverter x:Key="BoolToSolidColorBrushConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>            
        </Grid.ColumnDefinitions>
        <TextBlock 
            Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
            Style="{StaticResource HeaderTextBlockStyle}"
            Text="Форма входа" />
        <TextBlock
            Grid.Row="1" Grid.Column="0"
            Style="{StaticResource RegularStyle}"
            Text="Логин:" />
        <TextBox
            Grid.Row="1" Grid.Column="1"
            Style="{StaticResource TextBoxStyle}" 
            Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock
            Grid.Row="2" Grid.Column="0"
            Style="{StaticResource RegularStyle}"
            Text="Пароль:" />
        <TextBox
            Grid.Row="2" Grid.Column="1"
            Style="{StaticResource TextBoxStyle}" 
            Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>
        <Button
            Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
            Padding="0" Margin="30"
            FontSize="15" FontWeight="Black"
            Content="Войти" 
            Command="{Binding LoginCommand}"/>
        <TextBlock
            Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
            Style="{StaticResource HeaderTextBlockStyle}"
            Text="{Binding StatusMessage}"
            Background="{Binding IsSuccess, Converter={StaticResource BoolToSolidColorBrushConverter}}"/>
    </Grid>
</Window>

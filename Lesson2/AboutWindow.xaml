<Window x:Class="Lesson2.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson2"
        mc:Ignorable="d"
        Title="О программе"
        Width="250" MinWidth="250" MaxWidth="250"
        Height="450" MinHeight="500" MaxHeight="500" 
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Content="Простой текстовый редактор"
            FontSize="12"
            FontStyle="Normal" 
            FontWeight="Bold"
            HorizontalAlignment="Center"/>
        <Image 
            Grid.Row="1"
            Source="Data/photo.png" Stretch="None" StretchDirection="UpOnly" />
        <Label
            Grid.Row="2"
            Content="Автор: Фокин Сергей Владимирович"
            FontSize="8"            
            HorizontalAlignment="Center"/>
        <Label
            Grid.Row="3"
            Content="Версия: 0.0.0"
            FontSize="8"            
            HorizontalAlignment="Center"/>
        <Label
            Grid.Row="4"
            Content="Дата создания: 29.06.2025"
            FontSize="8"            
            HorizontalAlignment="Center"/>
        <Button 
            Grid.Row="5"
            Margin="5"
            Padding="5"
            Content="Закрыть"            
            IsCancel="True" />
        
    </Grid>
</Window>

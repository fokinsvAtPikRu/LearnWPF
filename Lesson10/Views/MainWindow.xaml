<Window x:Class="Lesson10.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson10.View"
        xmlns:vm="clr-namespace:Lesson10.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style 
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>            
        </Grid.ColumnDefinitions>
        <TextBlock 
            Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
            Margin="10" Padding="5" 
            HorizontalAlignment="Center" VerticalAlignment="Center"
            FontSize="20" FontStyle="Normal" FontWeight="Black"
            Text="Форма входа" />
        <TextBlock
            Grid.Row="1" Grid.Column="0"
            Margin="10" Padding="5" 
            HorizontalAlignment="Center" VerticalAlignment="Center"
            FontSize="15" FontStyle="Normal" FontWeight="Black"
            Text="Логин:" />
        <TextBox
            Grid.Row="1" Grid.Column="1"
            Margin="20" Padding="5"
            VerticalAlignment="Center"            
            FontSize="15" FontStyle="Normal" 
            Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock
            Grid.Row="2" Grid.Column="0"
            Text="Пароль:" />
        <TextBox
            Grid.Row="2" Grid.Column="1"
            Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>
        <Button
            Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
            Content="Войти" 
            Command="{Binding LoginCommand}"/>
        <TextBlock
            Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
            Text="{Binding StatusMessage}" />
    </Grid>
</Window>

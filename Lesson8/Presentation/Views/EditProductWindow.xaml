<Window x:Class="Lesson8.Presentation.Views.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson8.Presentation.Views"
        mc:Ignorable="d"
        Title="EditProductWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name" Padding="10"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Padding="10"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Price" Padding="10"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}" Padding="10"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Category" Padding="10"/>
        <ComboBox Grid.Row="2" Grid.Column="1" 
          ItemsSource="{Binding Categories}"
          ItemTemplate="{StaticResource ComboBoxTemplate}"
          SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"/>
        <Button
            Grid.Row="3" Grid.Column="1"
            Content="OK" Command="{Binding SaveChangedProductCommand}"/>
    </Grid>
</Window>

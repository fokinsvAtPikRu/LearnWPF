<Window x:Class="Lesson6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="BasedStyle">
            <Setter Property="Control.Margin" Value="5"/>
            <Setter Property="Control.Padding" Value="10" />
        </Style>
        <Style x:Key="PrimaryFont" BasedOn="{StaticResource BasedStyle}">
            <Setter Property="Control.FontStyle" Value="Normal"/>
            <Setter Property="Control.FontSize" Value="20"/>
            <Setter Property="Control.FontWeight" Value="Bold"/>                       
        </Style>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <StackPanel>
        <TextBox x:Name="txtBxSomeText" Text="Hello, World!" Style="{StaticResource PrimaryFont}"/>
        <CheckBox x:Name="chkBxIsStackVisible" Content="Show details" IsChecked="False" Style="{StaticResource PrimaryFont}" />
        <StackPanel Visibility="{Binding ElementName=chkBxIsStackVisible, Path=IsChecked, 
                                UpdateSourceTrigger=PropertyChanged,
                                Converter={StaticResource BooleanToVisibilityConverter}}">            
            <TextBlock 
                Text="{Binding ElementName=txtBxSomeText, 
                        Path=Text.Length, 
                        StringFormat=Text Length: {0},
                        UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource PrimaryFont}"/>
            <ProgressBar Minimum="0" Maximum="100" 
                         Value="{Binding ElementName=txtBxSomeText, Path=Text.Length, Mode=OneWay}"
                         Style="{StaticResource BasedStyle}" FontSize="20" Height="25">                
            </ProgressBar> 
        </StackPanel>
    </StackPanel>
</Window>

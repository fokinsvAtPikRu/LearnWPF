<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!--Кисти-->
    <SolidColorBrush Color="Green" x:Key="PrimaryColor" />
    <SolidColorBrush Color="LightGreen" x:Key="HoverColor" />
    <SolidColorBrush Color="Blue" x:Key="PressedColor" />
    <SolidColorBrush Color="Gray" x:Key="DisabledColor" />
    <!--Размеры элементов-->
    <sys:Double x:Key="ControlHeight">30</sys:Double>
    <sys:Double x:Key="ControlWidth">120</sys:Double>

</ResourceDictionary>
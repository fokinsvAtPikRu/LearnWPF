<Window x:Class="Lesson_4.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Width="400" Height="400">
        <Button Content="{Binding ContextButton}" Background="{Binding ColorButton}"                
                Margin="20" Padding="10" FontSize="48"
                Command="{Binding OnClickCommand}"/>
    </Grid>
</Window>

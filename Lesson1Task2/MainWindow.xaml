<Window x:Class="Lesson1Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson1Task2"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="800" 
        Width="200"
        MaxHeight="800"
        MaxWidth="200"
        MinHeight="800"
        MinWidth="200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Ellipse Name="Red" 
                 Grid.Row="0" 
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Center"
                 Height="180" 
                 Stroke="Black"
                 Fill="Red"
                 Width="180" 
                 RenderTransformOrigin="0.5,0.5"/>
        <Ellipse Name="Yellow" 
             Grid.Row="1" 
             HorizontalAlignment="Center" 
             VerticalAlignment="Center"
             Height="180" 
             Stroke="Black"
             Fill="Yellow"
             Width="180" 
             RenderTransformOrigin="0.5,0.5"/>
        <Ellipse Name="Green" 
         Grid.Row="2" 
         HorizontalAlignment="Center" 
         VerticalAlignment="Center"
         Height="180" 
         Stroke="Black"
         Fill="Green"
         Width="180" 
         RenderTransformOrigin="0.5,0.5"/>
        <Button Grid.Row="3"                
        Name="Switch"
        Content="Switch"
        VerticalAlignment="Stretch"
        HorizontalAlignment="Stretch"  
        FontSize="50" Click="Switch_Click" />
    </Grid>

</Window>

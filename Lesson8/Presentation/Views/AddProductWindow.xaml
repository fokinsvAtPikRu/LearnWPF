<Window x:Class="Lesson8.Presentation.Views.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson8.Presentation.Views"
        mc:Ignorable="d"
        Title="AddProductWindow" Height="300" Width="600">
    <Window.Resources>        
        
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name" Padding="10"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Padding="10"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Price" Padding="10"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}" Padding="10"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Category" Padding="10"/>
        <ComboBox Grid.Row="2" Grid.Column="1" 
                  ItemsSource="{Binding Categories}"
                  ItemTemplate="{StaticResource ComboBoxTemplate}"
                  SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"/>
        <Button Grid.Column="0" Grid.Row="3" Margin="20"
        Content="Select Image" 
        Command="{Binding SelectImageCommand}" />
        <Button Grid.Column="1" Grid.Row="3" Margin="20"
                Content="Add Product" 
                Command="{Binding AddProductCommand}" 
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
    </Grid>
</Window>
